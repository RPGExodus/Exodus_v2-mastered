<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.billog_studio.exodus.gra_atak_najemnik">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="35dp"
        android:textStyle="italic"
        android:textColor="#EF5350"
        android:text="Najemnik: Ci dwaj są poszukiwani od dłuższego czasu. A co do kobiety, no cóż. Nic nie dało się zrobić. Widzę, że jesteś człowiekiem wielkiej inicjatywy. Mogę cię czegoś nauczyć w związku z twoimi predyspozycjami. Może chcesz zostać jednym z nas?"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Z pewnością dysponujesz wieloma ciekawymi umiejętnościami. Naucz mnie czegoś."
        android:id="@+id/gra_najemnik_button_a"
        android:layout_below="@+id/textView27"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bardzo chętnie do was dołączę. Gdzie mogę was znaleźć?"
        android:id="@+id/gra_najemnik_button_b"
        android:layout_below="@+id/gra_najemnik_button_a"
        android:layout_alignParentStart="true" />
</RelativeLayout>
